<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LifTools.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="LifTools.Views.SplitDialog"
        x:DataType="vm:SplitDialogViewModel"
        Title="Split Race"
        Width="400" Height="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Design.DataContext>
        <vm:SplitDialogViewModel/>
    </Design.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Split Race" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Current Race Info -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="{Binding CurrentRaceNumber, StringFormat='Current Race: {0}'}" 
                       FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedRacersCount, StringFormat='Selected Racers: {0}'}" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Instructions -->
        <TextBlock Grid.Row="2" 
                   Text="Enter the race number for the new race:" 
                   Margin="0,0,0,10"/>

        <!-- Race Number Input -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" 
                       Text="New Race Number:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" 
                     Text="{Binding NewRaceNumber}" 
                     VerticalAlignment="Center"/>
        </Grid>

        <!-- File Names Preview -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Files to be created:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding OriginalFileName}" FontStyle="Italic"/>
            <TextBlock Text="{Binding NewFileName}" FontStyle="Italic"/>
        </StackPanel>

        <!-- Spacer -->
        <Grid Grid.Row="5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Click="CancelButton_Click" 
                    Margin="0,0,10,0" 
                    Width="80"/>
            <Button Content="Split" 
                    Click="SplitButton_Click"
                    IsEnabled="{Binding CanSplit}"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>
